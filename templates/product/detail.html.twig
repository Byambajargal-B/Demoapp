{% extends 'base.html.twig' %}
{% block body %}

	<div class="mt-[100px] ml-[100px]">
    <a class="underline font-bold" href="{{ path('product_index') }}"> < back </a>
		<h1 class="font-bold text-2xl mt-[20px]">Product</h1>
		<div class="flex flex-col gap-[10px] bg-red-100 p-4 w-fit rounded-xl">
			<div class="font-bold">Name :
				{{ product.name }}</div>
			<div class="font-bold">Price :
				{{ product.price }}</div>
			<div class="font-bold">Description :
