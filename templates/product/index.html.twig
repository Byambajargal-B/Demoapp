{% extends 'base.html.twig' %}

{% block title %}Hello!
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="mt-[100px] ml-[100px] ">
			<h1 class="text-4xl font-bold ">Products</h1>
			<button class="p-2 bg-red-100 rounded-xl mt-[20px] font-bold underline">
				<a href="{{ path('product_new') }}">Create a new product</a>
			</button>
			<div class="flex gap-[10px] mt-[20px]">
				{% for product in products %}
					<div class="flex flex-col gap-[10px] border-2 rounded-xl p-[10px]">
						<span class="font-bold">{{ product.name }}</span>
						<span>{{product.price}}</span>
						<div>{{product.description}}</div>
						<button class="p-2 bg-red-100 rounded-xl font-bold underline"><a href="{{ path('product_detail', {'id': product.id}) }}">Product detail</a></button>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endif %}
{% endblock %}
