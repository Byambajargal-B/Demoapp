<div class="mt-5 max-w-lg">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

	{{ form_row(form.name, {
		'attr': {'class': 'w-full px-4 py-2 border rounded-lg mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}
	}) }}

	{{ form_row(form.price, {
		'attr': {'class': 'w-full px-4 py-2 border rounded-lg mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}
	}) }}

	{{ form_row(form.description, {
		'attr': {'class': 'w-full px-4 py-2 border rounded-lg mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}
	}) }}

	{{ form_row(form.save, {
		'label': 'Save',
		'attr': {'class': 'bg-blue-500 text-white font-semibold py-2 px-4 mt-2 rounded hover:bg-blue-600'}
	}) }}

	{{ form_end(form) }}
</div>
