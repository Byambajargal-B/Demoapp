{% extends app.user ? 'base.html.twig' : 'security.html.twig' %}

{% block body %}
	<div class="mt-[100px] ml-[100px]">
		<h1 class="font-bold text-2xl text-blue-800">Welcome</h1>
		{% if app.user %}
			<a href={{ path('product_index') }} class="text-blue-500 underline">Go to products</a>
		{% else %}
			<a href="/login" class="text-red-500 underline">Please log in</a>
		{% endif %}
	</div>

{% endblock %}
