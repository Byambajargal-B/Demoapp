{% extends 'security.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% if not app.user %}
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="w-4/5 m-auto text-center">
				<div class="py-12 border-b border-gray-200">
					<h1 class="text-6xl pt-12 pb-8">
						Login
					</h1>

					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none" placeholder="Email" autocomplete="email" required autofocus>

					<input type="password" name="password" id="inputPassword" class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none" autocomplete="current-password" placeholder="Password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg w-1/5 mt-10 font-extrabold py-4 px-8 rounded-3xl" type="submit">
						Log in
					</button>
				</form>
			</div>
			<a class="underline" href="{{ path('app_register') }}">Register?</a>
		</div>
	{% else %}
		<div class="mt-200[px] ml-[100px] font-bold">
			You logged in
				<a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/" @click="isOpen = false">
					Home
				</a>
			<a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/{{app.user ? 'logout' : 'login'}}" @click="isOpen = false">
				{{ app.user ? 'Logout' : 'Login' }}
			</a>
		</div>
	{% endif %}
{% endblock %}
